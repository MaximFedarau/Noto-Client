{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "types": ["styled-components-react-native", "node"],
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],

      "@constants/*": ["src/constants/*"],

      "@screens": ["src/screens"],
      "@screens/*": ["src/screens/*"],

      "@navigation": ["src/navigation"],
      "@navigation/*": ["src/navigation/*"],

      "@types": ["src/types"],
      "@types/*": ["src/types/*"],

      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],

      "@store": ["src/store"],
      "@store/*": ["src/store/*"]
    }
  }
}
